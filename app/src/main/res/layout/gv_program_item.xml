<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_program_adapter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/rl_deviceback"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_95"
        android:background="@drawable/programbg_on"
        >
        <TextView
            android:id="@+id/tv_program_name"
            android:textSize="@dimen/sp_12"
            android:text="集团介绍"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"

            >
            <TextView
                android:id="@+id/tv_program_on"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:text="12/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_program_all"
                android:textSize="@dimen/sp_8"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:text="20"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_redpoint"
        android:layout_width="@dimen/dp_6"
        android:layout_height="@dimen/dp_6"
        android:src="@drawable/redpoint"
        android:layout_marginLeft="@dimen/dp_146"
        />
</RelativeLayout>
