<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_150"
    android:layout_height="@dimen/dp_95">

    <RelativeLayout
        android:id="@+id/rl_part_furniture_adapter"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_95"
        android:background="@drawable/furniture_open">

        <TextView
            android:id="@+id/tv_part_furniture_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_7"
            android:text="家具"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />
        <ImageView
            android:id="@+id/img_furniture_switch"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/btu_open"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/tv_part_furniture_unline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_17"
            android:text="离线"
            android:textColor="@color/unline"
            android:textSize="@dimen/sp_10" />
    </RelativeLayout>

</RelativeLayout>
