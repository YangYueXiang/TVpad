<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dp_76">
        <RelativeLayout
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/img_littlecover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#000"
                />
            <ImageView
                android:id="@+id/img_play"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_play"
                android:layout_marginLeft="@dimen/dp_9"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_slidprogramname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="节目名称"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_slidprogramsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.3M"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:textSize="@dimen/sp_8"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_slidprogramtimelength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00:23"
                android:textSize="@dimen/sp_8"
                android:layout_marginBottom="@dimen/dp_5"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_slidprogramstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未下载"
                android:textSize="@dimen/sp_8"
                android:textColor="@color/white"
                android:visibility="visible"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_defaultplay"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@drawable/default_no" />
</LinearLayout>
