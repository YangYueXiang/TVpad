<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_program_adapter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.PartActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_11"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_17"
                        android:src="@drawable/icon_back" />

                    <TextView
                        android:id="@+id/tv_partname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text="分区名称"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dp_20">

                    <ImageView
                        android:id="@+id/img_part_on"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_25"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@drawable/on" />

                    <ImageView
                        android:id="@+id/img_part_off"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_25"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@drawable/off" />

                    <ImageView
                        android:id="@+id/img_part_update"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:src="@drawable/update" />
                </LinearLayout>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/layout_part"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_18"
                android:orientation="horizontal" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_part_bottom_choice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/device"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_part_bottom_device"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:src="@drawable/devicecontroller" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/device"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_part_bottom_light"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@drawable/lightimg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lignt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>