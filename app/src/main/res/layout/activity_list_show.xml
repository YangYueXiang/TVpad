<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activity.ListShowActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_11"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_slid"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:src="@drawable/slidimg" />

                    <TextView
                        android:id="@+id/tv_devicename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dp_20">

                    <ImageView
                        android:id="@+id/img_device_on"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_25"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@drawable/on" />

                    <ImageView
                        android:id="@+id/img_device_off"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_25"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@drawable/off" />

                    <ImageView
                        android:id="@+id/img_device_update"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:src="@drawable/update" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_18"
                    >
                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/vp_program"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <androidx.viewpager.widget.ViewPager
                        android:visibility="gone"
                        android:id="@+id/vp_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/layout"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/layoutlight"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom_choice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/device"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_bottom_device"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dp_20"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:src="@drawable/devicecontroller" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="@string/device"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_11" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bottom_light"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_5"
                        android:src="@drawable/lightimg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lignt"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_11" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/left_drawlayout"
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/sild"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/dp_37"
                    android:layout_height="@dimen/dp_37"
                    android:layout_marginTop="@dimen/dp_50"
                    android:src="@drawable/icon_head" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="张三"
                    android:textSize="@dimen/sp_8"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_username"
                    android:textSize="@dimen/sp_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="10141854"
                    android:textColor="@color/white" />

                <ListView
                    android:id="@+id/listview"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_25"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_updatepwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_25"
                    android:text="修改密码"
                    android:textSize="@dimen/sp_8"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_exitlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出登录"
                    android:textSize="@dimen/sp_8"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>